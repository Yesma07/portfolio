---
export interface Props {
  title: string;
  description: string;
  githubUrl: string;
  liveUrl?: string;
  tech: string[];
}

const { title, description, githubUrl, liveUrl, tech } = Astro.props;
---

<article class="project-card">
  <div class="card-header">
    <h3 class="project-title">{title}</h3>
  </div>
  <p class="project-description">{description}</p>
  <footer class="card-footer">
    <ul class="tech-list">
      {tech.map((item) => <li>{item}</li>)}
    </ul>
    <div class="project-links">
      {
        liveUrl && (
          <a href={liveUrl} target="_blank" rel="noopener noreferrer">
            Demo
          </a>
        )
      }
      <a href={githubUrl} target="_blank" rel="noopener noreferrer">CÃ³digo</a>
    </div>
  </footer>
</article>

<style>
  .project-card {
    border: 2px solid var(--color-accent-cyan);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 0 10px -5px var(--color-accent-cyan);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 20px -5px var(--color-accent-cyan);
  }

  .project-title {
    color: var(--color-accent-magenta);
    font-size: 1.5rem;
    text-shadow: 0 0 5px var(--color-accent-magenta);
  }

  .tech-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0;
  }

  .tech-list li {
    background-color: rgba(0, 255, 255, 0.1);
    color: var(--color-accent-cyan);
    padding: 0.25rem 0.5rem;
    font-family: var(--font-family-body);
    font-size: 0.8rem;
    border-radius: 4px;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }

  .project-links a {
    color: var(--color-accent-yellow);
    text-decoration: none;
    font-family: var(--font-family-heading);
    font-size: 0.9rem;
    transition: text-shadow 0.3s;
  }

  .project-links a:hover {
    text-shadow: 0 0 10px var(--color-accent-yellow);
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }
</style>
